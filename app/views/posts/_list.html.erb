<div id="filterrific_results">
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Link</th>
        <th>Disciplina</th>
        <th>Professor</th>
      </tr>
    </thead>
    <tbody>
      <% posts.each do |post| %>
        <tr>
          <td><%= post.name %></td>
          <td><%= post.link %></td>
          <td><%= "disciplina" %></td>
          <td><%= "professor" %></td>
        </tr>
      <% end %>
    <tbody>
  </table>
  <%= paginate @posts %>
</div>
